{
  "resourceType": "StructureDefinition",
  "id": "nigeria-location",
  "url": "https://dhin-hie.org/ePrescription/StructureDefinition/nigeria-location",
  "version": "1.0.0",
  "name": "NgePLocation",
  "title": "NG-eP Location",
  "status": "active",
  "description": "A profile for immunization service locations, including health facilities, outreach sites, and mobile vaccination units.",
  "fhirVersion": "4.0.1",
  "kind": "resource",
  "abstract": false,
  "type": "Location",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Location",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Location.status",
        "path": "Location.status",
        "min": 1
      },
      {
        "id": "Location.name",
        "path": "Location.name",
        "min": 1
      },
      {
        "id": "Location.type",
        "path": "Location.type",
        "min": 1,
        "mustSupport": true,
        "binding": {
          "strength": "extensible",
          "valueSet": "https://dhin-hie.org/ePrescription/ValueSet/nigeria-facility-types"
        }
      },
      {
        "id": "Location.telecom",
        "path": "Location.telecom",
        "mustSupport": true
      },
      {
        "id": "Location.address",
        "path": "Location.address",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Location.address.extension:NGadministrativeWard",
        "path": "Location.address.extension",
        "sliceName": "NGadministrativeWard",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "Extension",
            "profile": [
              "https://dhin-hie.org/ePrescription/StructureDefinition/nigeria-administrative-ward"
            ]
          }
        ],
        "mustSupport": true
      },
      {
        "id": "Location.address.line",
        "path": "Location.address.line",
        "short": "The line address of the vaccination Location",
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Location.address.city",
        "path": "Location.address.city",
        "short": "The city, town or settlement where the vaccination location"
      },
      {
        "id": "Location.address.district",
        "path": "Location.address.district",
        "short": "The LGA where the vaccination location",
        "binding": {
          "strength": "required",
          "valueSet": "https://dhin-hie.org/ePrescription/ValueSet/nigeria-lgas"
        }
      },
      {
        "id": "Location.address.state",
        "path": "Location.address.state",
        "short": "The State in Nigeria where the vaccination location",
        "binding": {
          "strength": "required",
          "valueSet": "https://dhin-hie.org/ePrescription/ValueSet/nigeria-states"
        }
      },
      {
        "id": "Location.address.country",
        "path": "Location.address.country",
        "fixedString": "NG"
      },
      {
        "id": "Location.position.longitude",
        "path": "Location.position.longitude",
        "mustSupport": true
      },
      {
        "id": "Location.position.latitude",
        "path": "Location.position.latitude",
        "mustSupport": true
      },
      {
        "id": "Location.managingOrganization",
        "path": "Location.managingOrganization",
        "short": "Organization responsible for provisioning and upkeep of the vaccination location",
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "https://dhin-hie.org/ePrescription/StructureDefinition/ng-ep-organization"
            ]
          }
        ]
      },
      {
        "id": "Location.partOf",
        "path": "Location.partOf",
        "short": "Another location this organization is physically part of",
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "https://dhin-hie.org/ePrescription/StructureDefinition/nigeria-location"
            ],
            "extension": [
              {
                "url": "http://hl7.org/fhir/StructureDefinition/structuredefinition-hierarchy",
                "valueBoolean": true
              }
            ]
          }
        ]
      }
    ]
  }
}
