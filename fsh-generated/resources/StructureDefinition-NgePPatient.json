      },
      {
        "id": "Patient.name.given",
        "path": "Patient.name.given",
        "short": "The other names of the Immunization client",
        "min": 1
      },
      {
        "id": "Patient.gender",
        "path": "Patient.gender",
        "short": "The sex of the Immunization client",
        "binding": {
          "strength": "required",
          "valueSet": "https://dhin-hie.org/ePrescription/ValueSet/nigeria-gender"
        }
      },
      {
        "id": "Patient.birthDate",
        "path": "Patient.birthDate",
