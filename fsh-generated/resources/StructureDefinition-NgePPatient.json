        "mustSupport": true
      },
      {
        "id": "Patient.address.city",
        "path": "Patient.address.city",
        "short": "The city, town or settlement where the client lives in the state"
      },
      {
        "id": "Patient.address.district",
        "path": "Patient.address.district",
