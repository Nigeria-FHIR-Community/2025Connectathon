        "mustSupport": true
      },
      {
        "id": "Measure.title",
        "path": "Measure.title",
        "short": "A human-readable title for the measure (e.g., 'Penta1 to Measles Dropout Rate').",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Measure.status",
        "path": "Measure.status",
        "short": "Indicates the status of the measure (e.g., draft, active, retired).",
        "mustSupport": true
      },
      {
        "id": "Measure.date",
        "path": "Measure.date",
        "short": "The date this measure profile or version was published.",
