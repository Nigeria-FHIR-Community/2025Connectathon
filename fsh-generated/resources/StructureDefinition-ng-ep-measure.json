        "mustSupport": true
      },
      {
        "id": "Measure.group",
        "path": "Measure.group",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Measure.group.population",
        "path": "Measure.group.population",
        "min": 2,
        "mustSupport": true
      },
      {
        "id": "Measure.group.population.code",
        "path": "Measure.group.population.code",
