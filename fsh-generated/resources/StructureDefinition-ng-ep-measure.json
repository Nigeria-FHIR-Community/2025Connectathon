        "mustSupport": true
      },
      {
        "id": "Measure.publisher",
        "path": "Measure.publisher",
        "short": "The organization or person responsible for publishing the measure.",
        "mustSupport": true
      },
      {
        "id": "Measure.description",
        "path": "Measure.description",
        "short": "Detailed description of what this measure represents.",
